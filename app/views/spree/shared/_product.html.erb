<% url = spree.product_path(product, taxon_id: @taxon&.id) %>
<% cache [common_product_cache_keys, product] do %>
<div class="post_item post_layout_thumbs">
	<div class="post_featured hover_shop">
		<%= link_to url do %>
			<%= plp_and_carousel_image(product, image_class) %>
    	<% end %>
		<div class="mask"></div>
		<div class="icons">
			<%= link_to "", url, class: 'shop_cart icon-shopping-cart button add_to_cart_button product_type_simple ajax_add_to_cart' %>
			<%# <a href="#" aria-hidden="true" class="shop_link icon-link"></a> %>
		</div>
	</div>
	<div class="post_data">
		<div class="post_header entry-header">
			<h3><a href="product.html"><%= product.name %></a></h3>
		</div>
		<span class="price"><span class="woocommerce-Price-amount amount"><%= display_price(product) %></span>
		</span>
</div>
<% end %>
